@model Garage.Models.Account

@{

    ViewData["Title"] = "Registrieren";
}

<div class="login-body">
    <div class="container justify-content-center d-flex">
        <form asp-action="UserCreate" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Benutzername" class="control-label">Email oder Benutzername</label>
                <input asp-for="Benutzername" class="form-control"placeholder="hans.muster@gmail.com" required autofocus />
                <span asp-validation-for="Benutzername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passwort" class="control-label"></label>
                <input asp-for="Passwort" class="form-control" placeholder="Passwort" required autofocus/>
                <span asp-validation-for="Passwort" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary btn-success" />
            </div>
        </form>
    </div>
</div>
