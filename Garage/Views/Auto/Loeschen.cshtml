            <div class="col-md-6">
                @Html.DisplayNameFor(model => model.Pic)

                <img src="@ViewBag.ImageSource" class="img-fluid" />

            </div>
        </div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PK_Auto)
            </dt>
            <dd class="col-sm-10">
